{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "newLine": "LF"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
